Question Link : https://leetcode.com/problems/restore-ip-addresses/description/

Solution : 

class Solution {
public:
    vector<string> restoreIpAddresses(string s) {
        vector<string> result;
        string ip;
        dfs(s,0,0,ip,result);
        return result;
    }

    void dfs(string &s,int i,int dots,string ip,vector<string>& result){

        if(i==s.size() && dots==4){
            ip.pop_back(); // removing dot entered at end position
            result.push_back(ip);
            return;
        }
        
        if(dots > 4) return;

        int num=0,n = s.size();
        for(int j=i;j<min(i+3,n);j++){
            num = num*10 + (s[j]-'0');
            if(num<=255){
                ip+=s[j];
                dfs(s,j+1,dots+1,ip+'.',result);
            }
            if(num==0) break;
        }
    }
};
